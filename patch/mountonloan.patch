+
+#define MSG_GOSSIP_TEXT_1  "I would like to rent a Ancient Frostsaber" 
+#define MSG_GOSSIP_TEXT_2  "I would like to rent a Swift Brewfest Ram" 
+#define MSG_GOSSIP_TEXT_3  "I would like to rent a Black War Kodo"
